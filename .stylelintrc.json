{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-scss", "stylelint-csstree-validator"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "csstree/validator": {
      "properties": {
        "composes": "<any-value>"
      }
    },
    "property-no-unknown": [
      true,
      {
          "ignoreProperties": [
              "composes"
          ]
      }
    ]
  },
  "ignoreFiles": ["build/**", "dist/**", "**/reset*.css", "**/bootstrap*.css"]
}